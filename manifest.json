{
  "manifest_version": 3,
  "name": "Spine Forge - Prompt Helper",
  "version": "0.1.0",
  "description": "Prototype extension that injects prompt templates into ChatGPT.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
