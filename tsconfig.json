{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["chrome"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
